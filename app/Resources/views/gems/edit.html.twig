{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('gem_edit', {id: gem.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Gem</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="gem_name">Gem </label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="gem_name" placeholder="Gem Name"
                                   name="gem[name]" value="{{ gem.name }}" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="gem_info">Info</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="gem_info"
                                  name="gem[info]" required>{{ gem.info }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('gems_all') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}


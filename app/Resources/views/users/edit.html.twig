{% extends 'base.html.twig' %}

{% block main %}
    {% for msg in app.session.flashBag.get('errors') %}
        <div class="alert alert-danger" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('user_profile_edit') }}" method="post">
                <fieldset>
                    <legend>Edit</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Email</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="user_email" placeholder="Email" name="user[email]" required
                                   type="email" value="{{ user.email }}" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Full Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_fullName" placeholder="Full Name"
                                   name="user[fullName]" value="{{ user.fullName }}" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_image">Upload Image</label>
                        <div class="col-sm-4 ">
                            <input type="file" accept=".jpg, .jpeg, .png" class="form-control" id="user_image"
                                   placeholder="Upload Image"
                                   name="user[image]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_address">Address</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_address" placeholder="Address"
                                   name="user[address]" value="{{ user.address }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_phone">Phone</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_phone" placeholder="Phone"
                                   name="user[phone]" value="{{ user.phone }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_profile') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>

                    {{ form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}